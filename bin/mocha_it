#!/bin/bash

# Ref: [installation | Gowall Docs](https://achno.github.io/gowall-docs/installation)

# 检查参数数量
if [ $# -ne 1 ]; then
  echo "用法: $0 <图片文件路径>"
  echo "示例: $0 ./img/a.jpg"
  exit 1
fi

# 获取输入文件路径
input_file="$1"

# 检查文件是否存在
if [ ! -f "$input_file" ]; then
  echo "错误: 文件 '$input_file' 不存在"
  exit 1
fi

filename=$(basename "$input_file")
echo "正在转换: $input_file"
gowall convert "$input_file" -t catppuccin --output "$filename"
